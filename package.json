{
  "name": "taskchain-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "blockchain"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "blockchain:compile": "npm run compile --workspace=blockchain",
    "blockchain:test": "npm run test --workspace=blockchain",
    "frontend:lint": "npm run lint --workspace=frontend",
    "frontend:tsc": "tsc --noEmit --project frontend/tsconfig.json"
  },
  "dependencies": {
    "@composer-kit/ui": "^0.0.3"
  }
}
